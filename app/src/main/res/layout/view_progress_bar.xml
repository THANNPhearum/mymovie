<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/view_progress"
        android:layout_width="@dimen/progress_bar_background_size"
        android:layout_height="@dimen/progress_bar_background_size"
        android:layout_gravity="center"
        android:background="@drawable/bg_round_black"
        android:maxWidth="@dimen/progress_bar_background_size"
        android:minHeight="@dimen/progress_bar_background_size">

        <android.support.v4.widget.ContentLoadingProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>
</layout>